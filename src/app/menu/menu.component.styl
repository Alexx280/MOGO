*
  margin 0

.menu
  display inline-block
  width 100px
  height 20px
  color white
  text-align center
  float right
  &:hover
    color yellow
    border-bottom 1px solid yellow
.fon
  position absolute
  top 50px
  left 0
  width 100%
  height 1000px
  background-image url("../../assets/app-menu/1.png")
  background-repeat no-repeat

.gradient
  position absolute
  top 50px
  left 0
  width 100%
  height 1000px
  background-image url("../../assets/app-menu/gradient.png")
  background-repeat no-repeat
  opacity 0.7


